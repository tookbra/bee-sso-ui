body
  margin: 0;
  padding: 0;
  height 100%
.nav-header
  transition: all .3s;

.nav-header
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;

.bee-container
  width: 100%;
  height: 100%;
  background: #f0f2f5;
  background-size: 100%;
  background-repeat: no-repeat;
  .nav-left
    position: fixed;
    left: 0;
    top: 0;
    width: 240px;
    height: 100%;
    z-index: 1025;
  .nav-header
    width: 100%;
    background-color: #fff;
    box-sizing: border-box;
    background-color: #1E90FF;
    .nav-sub-header
      left: 240px;
      padding: 0 20px;
      position: relative;
      box-shadow: 0 1px 4px rgba(0,21,41,.08);
      color: rgba(0, 0, 0, .65);
      font-size: 28px;
      height: 64px;
      box-sizing: border-box;
      white-space: nowrap;
      .nav-header-user
        height: 64px;
        position: fixed;
        top: 0;
        right: 20px;
        display: flex;
        align-items: center;
  .bee-context
    position: absolute;
    left: 240px;
    padding: 0;
    padding-bottom: 20px;
    width: calc(100% - 240px);
    height: calc(100% - 70px);
    box-sizing: border-box;
    overflow: hidden;
